                  }
                }
              }
              }
            }
          },
          "404": {
            "description": "Mock api not found",
            "content": {
              "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "example": "Mock api not found"
                  }
                }
              }
              }
            }
          },
          "400": {
            "description": "Monthly quota exceeded",
            "content": {
              "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "example": "Monthly quota exceeded"
                  }
                }
              }
              }
            }
          }
        }
