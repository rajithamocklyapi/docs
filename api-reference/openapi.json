  "servers": [
    {
      "url": "https://api.mocklyapi.com"
    }
  ],
  "paths": {
    "/mock/{mockApiId}": {
      "get": {
        "parameters": [
          {
            "name": "auth_token",
            "in": "query",
            "required": false,
            "description": "Authentication token is required for private endpoints",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filters",
            "in": "query",
            "required": false,
            "description": "Filters to apply on the mock data",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order_by",
            "in": "query",
            "required": false,
            "description": "Order by field",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order_direction",
            "in": "query",
            "required": false,
            "description": "Order by direction (asc or desc)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Limit the number of results",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "mockApiId",
            "in": "path",
            "required": true,
            "description": "Mock api unique id",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "mocklyapiauthtoken",
            "in": "header",
            "description": "Authentication token is required for private endpoints",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success Response",
            "content": {
              "application/json": {
          "schema": {
            "type": "array"
          }
              }
            }
          },
          "401": {
            "description": "Auth token not found or Invalid auth token",
            "content": {
              "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "example": "Auth token not found or Invalid auth token"
                  }
                }
              }
              }
            }
          },
          "405": {
            "description": "Invalid Method",
            "content": {
              "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
